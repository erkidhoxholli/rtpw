        "style-loader": "^1.2.1",
        "ts-jest": "^26.1.1",
        "ts-loader": "^7.0.5",
        "ts-node": "^8.10.2",
        "typescript": "^3.9.5",
        "webpack": "^4.43.0",
        "webpack-cli": "^3.3.12",
        "webpack-dev-server": "^3.11.0"
    },
    "dependencies": {
        "@apollo/react-hooks": "^3.1.5",
